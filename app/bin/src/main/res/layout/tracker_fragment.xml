<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/summary_heading"
        android:text = "Choose Exercise and Speed"
        android:textSize = "30sp"
        android:layout_marginTop = "50dp"
        android:layout_marginStart = "20dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id = "@+id/accel_face_pulls"
        android:text = "Face Pulls"
        android:layout_marginTop = "120dp"
        android:layout_marginLeft = "30dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id = "@+id/accel_lower_traps"
        android:text="Lower Traps"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="225dp"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id = "@+id/accel_rotator_cuff"
        android:text = "Rotator Cuff"
        android:layout_marginTop = "300dp"
        android:layout_marginLeft = "30dp"/>

    <Button
        android:id="@+id/accel_swimmers"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginLeft="225dp"
        android:layout_marginTop="300dp"
        android:text="Swimmers" />
</RelativeLayout>