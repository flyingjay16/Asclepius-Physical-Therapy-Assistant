<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Lift">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Delta X: 0.0"
        android:id="@+id/A_X"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/A_Y"
        android:text = "Delta Y: 0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id = "@+id/A_Z"
        android:text = "Delta_Z: 0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="50dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="150dp"/>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="This feature lets you know if you are doing the exercise at an appropriate speed. You want to aim for a consistent green color. "
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="303dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop = "250dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>