<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/summary_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workout Summary"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="50dp"/>

    <TextView
        android:id="@+id/data_log"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="100dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="20sp" />

    <TextView
        android:id = "@+id/Description1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/summary_heading"
        android:layout_marginTop = "30dp"
        android:text = "Welcome to our app! We help you track your form to ensure you are performing your
exercises safely and without complications. Our app features an accelerometer, which notifies you if you are performing the rep too fast or too slow,
and guides you toward a consistent speed." />

    <TextView
        android:id ="@+id/Description2"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Description1"
        android:layout_marginTop = "30dp"
        android:text = "Another feature is computer vision; someone can film you doing the exercise and the camera tracker determines if your form is correct.
        For more information in detail, feel free to check our tutorial tab, which includes video demonstrations of exercises for rotator cuff and shoulder girdle. "/>





</androidx.constraintlayout.widget.ConstraintLayout>